<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.mytoolbox.Calculadora">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#FFFF"
        android:text="0"
        android:textSize="30dp"
        android:textDirection="rtl"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Boton_Parabola"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_below="@+id/Layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="#D5D5D5"
        android:onClick="onClick"
        android:text="Graficar Parabola"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="363dp" />

    <Button
        android:id="@+id/Boton_Recta"
        android:layout_width="346dp"
        android:layout_height="61dp"
        android:background="#D5D5D5"
        android:text="Graficar Recta"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="425dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/Boton_Parabola"
        android:layout_alignLeft="@+id/Boton_Parabola"
        android:layout_alignStart="@+id/Boton_Parabola" />

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorPrimaryDark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Boton_Potencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_punto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="29dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Boton_Raiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="29dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Boton_Eliminar_Numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="29dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Boton_Eliminar_Todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_Division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_Multiplicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_Suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="29dp" />

            <Button
                android:id="@+id/Boton_Resta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="29dp" />
            />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
