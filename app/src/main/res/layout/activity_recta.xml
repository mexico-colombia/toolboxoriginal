<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.mytoolbox.Recta">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/Graph_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/textView9"
        android:layout_alignParentTop="true" />



    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="M"
        android:textSize="30dp"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/Graficar"
        android:layout_alignBottom="@+id/Graficar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="B"
        android:textSize="30dp"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/B"/>

    <EditText
        android:id="@+id/M"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:layout_below="@+id/Graph_2"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/B"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />




    <Button
        android:id="@+id/Graficar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Graficar"
        android:layout_above="@+id/Calculadora"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/M"
        android:layout_toEndOf="@+id/M" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Calculadora"
        android:id="@+id/Calculadora"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/M"
        android:layout_toEndOf="@+id/M" />



</RelativeLayout>
