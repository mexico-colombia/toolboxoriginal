<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristian.mytoolbox.Parabola">

    <Button
        android:id="@+id/Calcu"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Calculadora"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/C"
        android:layout_toEndOf="@+id/C" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/Graph"
        android:layout_above="@+id/textView13"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="A"
        android:textSize="30dp"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/A"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="B"
        android:textSize="30dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="C"
        android:textSize="30dp"
        android:id="@+id/textView15"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/C"
        android:layout_alignBottom="@+id/Calcu"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />
    <EditText
        android:id="@+id/B"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:layout_above="@+id/C"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />
    <EditText
        android:id="@+id/A"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:layout_above="@+id/B"
        android:layout_alignLeft="@+id/B"
        android:layout_alignStart="@+id/B" />


    <Button
        android:id="@+id/Graficar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Graficar"
        android:layout_alignTop="@+id/A"
        android:layout_toEndOf="@+id/B"
        android:layout_above="@+id/Calcu" />




</RelativeLayout>
